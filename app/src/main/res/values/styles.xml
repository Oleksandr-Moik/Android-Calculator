<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Buttons" parent="android:Widget.Button">
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">25sp</item>
        <item name="android:layout_margin">2dp</item>
    </style>

    <style name="NumberButtons" parent="Buttons">
        <item name="android:background">@color/numbersBack</item>
    </style>

    <style name="simpleFunctions" parent="Buttons">
        <item name="android:background">@color/simpleFunctionsBack</item>
    </style>

    <style name="addtionalFunctions" parent="Buttons">
        <item name="android:background">@color/addtionalFunctionsBack</item>
    </style>

    <style name="Clear" parent="simpleFunctions">
        <item name="android:layout_margin">0dp</item>
    </style>

    <style name="InputArea" parent="android:Widget.TextView">
        <item name="android:gravity">right|center_vertical</item>
        <item name="android:textSize">25sp</item>
        <item name="android:textColor">#E95F5F</item>
        <item name="android:background">#6CFFAB</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">2sp</item>
    </style>

    <style name="AppBackground">
        <item name="android:background">#FCCABB</item>
    </style>

</resources>
